#include <stdio_ext.h>
#include <stdlib.h>


int main(void)
{
	int acumulador=0;
	int numero;
	int contador=0;
	float promedio;

	while(1)
	{
		printf("Ingrese un numero: ");
		scanf("%d",&numero);
		printf("IG 999 para finalizar");
		if(numero!=999)
		{
			acumulador = acumulador + numero;
		}
		else
		{
				break;
		}
	}
	promedio=(float)acumulador/contador;
	printf("El promedio es %.2f",promedio);

	return EXIT_SUCCESS;
}
